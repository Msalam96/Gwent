
@{
    ViewBag.Title = "Index";
}

<div class="container">
    <div class="row">
        <div class="col-sm-3" style="background-color:saddlebrown;height:600px">
            <div class="row">
                <div class="col-sm-12" style="background-color:white;height:100px"></div>
            </div>
            @* OPPONENT STATS ROW *@
            <div class="row">
                <div  id="opponentStats" class="col-sm-12" style="background-color:black;height:100px; opacity:0.5;">
                    <span id="oppName" style="color:gold; font-weight:bold;"></span>
                    <div class="row">
                        
                        <div class="col-sm-3" style="background-color:red;height:50px">HAND:</div>
                        <div class="col-sm-3" style="background-color:blue;height:50px">
                            <span id="numPlayerCard"></span>
                        </div>
                        <div class="col-sm-3" style="background-color:red;height:50px">ROUNDS:</div>
                        <div class="col-sm-3" style="background-color:brown;height:50px">
                            <span id="oppRoundWon"></span>
                        </div>
                    </div>
                </div>
            </div>

            @* PLAYER STATS ROW *@
            <div class="row">
                <div class="col-sm-10" style="color:black;background-color:white;height:100px">TOTAL POWER:</div>
                <div class="col-sm-2" style="background-color:green;height:100px">
                    <span id="oppTotPower" style="color:gold; font-weight:bold;"></span>
                </div>
            </div>
            <div class="row">
                <div class="col-sm-12" style="background-color:saddlebrown;height:100px">
                    <span id="playerName" style="color:gold; font-weight:bold;"></span>
                    <div class="row">
                        <div class="col-sm-3" style="background-color:blue;height:50px">HAND:</div>
                        <div class="col-sm-3" style="background-color:green;height:50px">
                            <span id="numOppCard"></span>
                        </div>
                        <div class="col-sm-3" style="background-color:blue;height:50px">ROUND:</div>
                        <div class="col-sm-3" style="background-color:brown;height:50px">
                            <span id="playerRoundWon"></span>
                        </div>
                       
                        
                    </div>
                </div>
            </div>

            <div class="row">

                <div class="col-sm-10" style="color:black;background-color:white;height:100px">TOTAL POWER:</div>
                <div id="playerTotPower" class="col-sm-2" style="color:gold; font-weight:bold;background-color:green;height:100px">
                    <span></span>
                </div>
            </div>
        </div>
       
        <div class="col-sm-6" style="height:650px">
            Gameboard

            <p style="color:red">SIEGED</p>
            <div id="p1sieged" class="row my-row sieged">
                <div id ="oppSiegedScoreDiv"class="col-md-2 col-sm-6 my-col">
                    <span>SCORE</span>
                </div>
            </div>
            <p>RANGED</p>
            <div id="p1ranged" class="row my-row">
                <div id ="oppRangeScoreDiv"class="col-md-2 col-sm-6 my-col">
                    <span>SCORE</span>
                </div>
            </div>
            <p>CLOSE COMBAT</p>
            <div id="p1CloseCombat" class="row my-row">
                <div id ="oppCloseCombatScoreDiv"class="col-md-2 col-sm-6 my-col">
                    <span>SCORE</span>
                </div>
            </div>


            <p>ClOSE COMBAT</p>
            <div id="p2CloseCombat" class="row my-row">
                <div id ="playerCloseCombatScoreDiv" class="col-md-2 col-sm-6 my-col">
                    <span>SCORE</span>
                </div>
            </div>
            <p>RANGED</p>
            <div id="p2ranged" class="row my-row">
                <div id ="playerRangedScoreDiv"class="col-md-2 col-sm-6 my-col">
                    <span>SCORE</span>
                </div>
            </div>

            <p style="color:red">SIEGED</p>
            <div id="p2sieged" class="row my-row">
                <div id ="playerSiegedScoreDiv" class="col-md-2 col-sm-6 my-col">
                    <span>SCORE</span>
                </div>
            </div>
            <h1>HAND</h1>
            <div id="hand" class="row my-handDeck">
                
            </div>

        </div>
        <div class="col-sm-3" style="background-color:blue;height:600px">
            Deck section
            <div class="row">
                <div class="col-sm-3" style=background-color:aqua;height:125px>Discard pile</div>
                <div class="col-sm-3" style=background-color:burlywood;height:125px>Deck</div>
            </div>
            <div class="row">
                <div class="col-sm-12" style=background-color:white;height:200px></div>
            </div>
            <div class="row">
                <div class="col-sm-3" style=background-color:aqua;height:125px>Discard pile</div>
                <div class="col-sm-3" style=background-color:burlywood;height:125px>Deck</div>
            </div>
        </div>
    </div>


</div>

