@model IEnumerable<UserRelationship>

@{
    ViewBag.Title = "Index";
}

<h2>My Friends</h2>

<p>
    @Html.ActionLink("Add Friend", "AddFriend")
</p>
<table class="table">
    <tr style="color:white">
        <th>
            @Html.DisplayNameFor(model => model.FirstUser)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.SecondUser)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.IsAccepted)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr style="color: white">
        <td>
            @Html.DisplayFor(modelItem => item.FirstUser.FirstName)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.SecondUser.FirstName)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.IsAccepted)
        </td>
        <td>
            @if (!item.IsAccepted && (((Gwent.Security.CustomPrincipal)User).User.Id) == item.FirstUserId)
            {
                <p>Request Pending</p>
            }

            else if ((!item.IsAccepted && (((Gwent.Security.CustomPrincipal)User).User.Id) == item.SecondUserId))
            {
                using (Html.BeginForm("AcceptRequest", "Friends", new { id = item.Id}))
                {
                    <button type="submit" class="btn btn-success">Accept Request</button> 
                }
            }

            else if (item.IsAccepted)
            {
                <p>You are Friends</p>
            }

            @*@Html.ActionLink("Edit", "Edit", new { id=item.Id }) |
            @Html.ActionLink("Details", "Details", new { id=item.Id }) |
            @Html.ActionLink("Delete", "Delete", new { id=item.Id })*@
        </td>
    </tr>
}

</table>
