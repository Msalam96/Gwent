<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - My ASP.NET Application</title>
    @*<link href="~/Content/Site.css" rel="stylesheet" type="text/css" />
        <link href="~/Content/bootstrap.min.css" rel="stylesheet" type="text/css" />
        <script src="~/Scripts/modernizr-2.6.2.js"></script>*@
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.3.1/css/bootstrap.min.css" integrity="sha384-ggOyR0iXCbMQv3Xipma34MD+dH/1fQ784/j6cY/iJTQUOhcWr7x9JvoRxT2MZw1T" crossorigin="anonymous">
    <link rel="stylesheet" type="text/css" href="~/CSS/Home.css" />
    <link rel="stylesheet" type="text/css" href="~/CSS/board.css">
</head>
<body>
    <div class="container">
        <div class="navbar navbar-expand-lg navbar-inverse navbar-dark bg-dark fixed-top">
            <div class="container">
                <div class="navbar-brand">
                    <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                        <span class="icon-bar"></span>
                        <span class="icon-bar"></span>
                        <span class="icon-bar"></span>
                    </button>
                    @Html.ActionLink("Gwent", "Index", "Home", new { area = "" }, new { @class = "navbar-brand" })
                </div>
                <div>
                    <ul class="nav navbar-nav"></ul>
                    @if (Request.IsAuthenticated)
                    {
                        <div class="navbar-text navbar-right">
                            <span>Welcome @(((Gwent.Security.CustomPrincipal)User).Identity.Name)! </span>
                            @using (Html.BeginForm("Logout", "Authentication", FormMethod.Post, new { style = "display:inline" }))
                            {
                                <button class="btn btn-warning" type="submit">Logout</button>
                            }
                        </div>
                    }
                </div>
            </div>
        </div>
    </div>

    <div class="container mt-5 pt-5 body-content">
        @RenderBody()
        <hr />
        <footer>
            <p>&copy; @DateTime.Now.Year - My ASP.NET Application</p>
        </footer>
    </div>

    <script src="~/Scripts/jquery-1.10.2.min.js"></script>
    <script src="~/Scripts/bootstrap.min.js"></script>
</body>
</html>